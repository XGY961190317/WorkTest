<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/jielu_Animation"
        android:layout_width="wrap_content"
        android:onClick="myOnClick"
        android:layout_height="wrap_content"
        android:text="揭露动画（jieluAnimation）"/>
    <Button
        android:id="@+id/transition_Animation"
        android:layout_width="wrap_content"
        android:onClick="myOnClick"
        android:layout_height="wrap_content"
        android:text="转场动画（transitionAnimation）"/>
    <Button
        android:id="@+id/transition_to_activity"
        android:layout_width="wrap_content"
        android:onClick="myOnClick"
        android:layout_height="wrap_content"
        android:text="Activity转场动画动画（transitionAnimationToActivity）"/>
</LinearLayout>